<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailActivity"
    tools:showIn="@layout/activity_detail">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margins_16">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/baseline_0"
            android:layout_marginTop="@dimen/baseline_0"
            android:layout_marginEnd="@dimen/baseline_0"
            app:cardElevation="@dimen/baseline_4"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title"
                style="@style/SandwichTitles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margins_16"
                android:layout_marginTop="@dimen/margins_16"
                android:layout_marginEnd="@dimen/margins_16"
                android:layout_marginBottom="@dimen/margins_16"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Ham and cheese sandwich" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/header_description"
            style="@style/SandwichSectionTitles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margins_16"
            android:layout_marginTop="@dimen/margins_16"
            android:layout_marginEnd="@dimen/margins_16"
            android:text="@string/header_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/sandwich_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margins_16"
            android:layout_marginTop="@dimen/margins_8"
            android:layout_marginEnd="@dimen/margins_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_description"
            tools:text="@string/dummy_description" />

        <TextView
            android:id="@+id/header_aka"
            style="@style/SandwichSectionTitles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margins_16"
            android:layout_marginTop="@dimen/margins_16"
            android:layout_marginEnd="@dimen/margins_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sandwich_description"
            android:text="@string/header_aka" />

        <TextView
            android:id="@+id/aka"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margins_16"
            android:layout_marginTop="@dimen/margins_8"
            android:layout_marginEnd="@dimen/margins_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_aka"
            tools:text="Farty McFart Sandwich, The 'ol ham slider" />

        <TextView
            android:id="@+id/header_origin"
            style="@style/SandwichSectionTitles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margins_16"
            android:layout_marginTop="@dimen/margins_16"
            android:layout_marginEnd="@dimen/margins_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aka"
            android:text="@string/header_origin" />

        <TextView
            android:id="@+id/origin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margins_16"
            android:layout_marginTop="@dimen/margins_8"
            android:layout_marginEnd="@dimen/margins_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_origin"
            tools:text="My refrigerator" />

        <TextView
            android:id="@+id/header_ingredients"
            style="@style/SandwichSectionTitles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margins_16"
            android:layout_marginTop="@dimen/margins_16"
            android:layout_marginEnd="@dimen/margins_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/origin"
            android:text="@string/header_ingredients" />

        <TextView
            android:id="@+id/ingredients"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margins_16"
            android:layout_marginTop="@dimen/margins_8"
            android:layout_marginEnd="@dimen/margins_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_ingredients"
            tools:text="White bread, Bratwurst, Onions, Tomato ketchup, Mustard, Curry powder" />


    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>