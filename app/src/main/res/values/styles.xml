<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/textColorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textContent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SandwichTitles" parent="@style/AppTheme">
        <item name="android:textSize">@dimen/text32</item>
        <item name="android:textColor">@color/colorToolbarCollapsed</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SandwichSectionTitles" parent="@style/AppTheme">
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:textColor">@color/contentHeaders</item>
    </style>

    <style name="ExpandedToolbar" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/colorTransparent</item>
        <item name="android:textSize">@dimen/text20</item>
    </style>

    <style name="CollapsedToolbar" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/colorToolbarCollapsed</item>
        <item name="android:textSize">@dimen/text20</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
